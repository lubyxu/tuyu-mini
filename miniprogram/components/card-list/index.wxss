.card-list {
    margin: 32rpx 32rpx 0 32rpx;
}

.card-title {
    display: flex;
}

.logo {
    width: 48rpx;
    height: 48rpx;
}

.card-title-text {
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 25px;
    text-align: center;
    letter-spacing: -0.21px;
    color: #3D2210;
    flex: none;
    order: 1;
    flex-grow: 0;
}

.card-item {
    margin-top: 24rpx;
    position: relative;
    width: 100%;
    height: 300rpx;
    background-color: transparent; 
    background-size:cover;
    background-repeat:no-repeat;
    position: relative;
}

.nav-icon {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 40rpx;
    height: 40rpx;
}

.desc-box {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: self-start;
    position: absolute;
    top: 134rpx;
    left: 320rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 25px;
    text-align: center;
    letter-spacing: -0.21px;
    color: #FFBD8F;
}

.desc-subtitle {
    font-size: 22px;
    font-weight: 600;
}