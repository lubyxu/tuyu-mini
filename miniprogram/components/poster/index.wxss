.poster-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100vw;
    height: 100vh;
    background: red;
    overflow: hidden;
}

.bottom-modal {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    bottom: 0;
    height: 158px;
    width: 100%;
    background: #F6F6F6;
    backdrop-filter: blur(40px);
    border-radius: 14px 14px 0px 0px;
}

.bottom-modal-header {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 48px;
}

.bottom-modal-text {
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 28px;
    color: rgba(0, 0, 34, 0.91);
    flex: 1;
    text-align: center;
}

.bottom-modal-close-icon {
    position: absolute;
    width: 24px;
    height: 24px;
    right: 16px;
}

.bottom-modal-icon-box {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    width: 48px;
    height: 48px;
    border-radius: 50%;
}

.bottom-modal-download-icon {
    width: 28px;
    height: 28px;
}

.bottom-modal-tips {
    margin-top: 8px;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 12px;
    text-align: center;
    color: rgba(0, 0, 34, 0.56);
}