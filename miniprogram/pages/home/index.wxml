<!--index.wxml-->
<view>
  <loading wx-if="{{showLoading}}" />
  <view wx-if="{{!showLoading}}" class="page-section swiper">
    <navigation-bar
      className="{{titleBarVisible ? 'fadein' : 'fadeout'}}"
      title="{{titleBarVisible ? '福鱼文化创意馆' : ''}}"
    ></navigation-bar>

  <view class="banner" >
    <view wx-if="{{!titleBarVisible}}" class="position-box">
      <image
          src="../../images/position.svg"
          class="positon-icon"
      />
      <text class="position-text">{{position}}</text>
    </view>
  </view>

  <view class="nav-container">
    <cover-view wx:for="{{selectList}}" wx:key="{{item.index}}" data-id="{{item.index}}" bindtap="switchTab" class="nav-box">
      <cover-image class="nav-icon" src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
      <cover-view class="{{selected === index ? 'tab-bar-text-active' : 'tab-bar-text'}}">{{item.text}}</cover-view>
    </cover-view>
  </view>

    <view class="scroll-view-container">
      <cardList cardData="{{card}}" bind:scrollBottom="scrollBottom" bind:ocrClick="ocrClick" bind:onFind="onFind"></cardList>
    </view>
    
  </view>
</view>
