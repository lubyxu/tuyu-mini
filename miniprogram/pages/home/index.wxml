<!--index.wxml-->
<view>
  <loading wx-if="{{showLoading}}" />
  <view wx-if="{{!showLoading}}" class="page-section swiper">
   <navigation-bar className="{{titleBarVisible ? 'fadein' : 'fadeout'}}" title="图鱼文化创意馆"></navigation-bar>
    <view class="scroll-view-container">
      <scroll-view
        class="card-scroll"
        scroll-y
        bindscrolltolower="scrollBottom"
        lower-threshold='150'
        enhanced="true"
        show-scrollbar="{{false}}"
        bindscrolltoupper="bindscrolltoupper"
        bindscroll="bindscroll"
        upper-threshold='150'
    >
      <view>
        <swiper
          indicator-dots="{{indicatorDots}}"
          autoplay="{{autoplay}}"
          interval="{{interval}}"
          duration="{{duration}}"
          style="height: 234px;"
        >
          <block wx:for="{{swiper}}" wx:key="_id">
            <swiper-item>
              <image src="{{item.url}}" class="banner-item"/>
            </swiper-item>
          </block>
        </swiper>
      </view>
      <view class="top-section">
        <image
          src="https://636c-cloud1-0gq8f3qi3903d318-1327253936.tcb.qcloud.la/app-assets/bg-01.png?sign=703902c75fd6cc3ee26d36cf55e01064&t=1720144358"
          class="top-section-img"
        />
        <cardList cardData="{{card}}" bind:scrollBottom="scrollBottom" bind:ocrClick="ocrClick"></cardList>
      </view>
    </scroll-view>
    </view>
    
  </view>
</view>
